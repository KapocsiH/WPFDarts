<Window x:Class="WPFDarts._501"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDarts"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="_501" FontSize="32">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Name="DartboardImage" Source="Blade6.jpg" MouseLeftButtonDown="DartboardImage_MouseLeftButtonDown"/>
        <!--<Label Name="cursorp" Grid.Column="1" Content=""/>-->
        <Label Name="Player1ScoreLabel" Grid.Column="1" Content="player1 Pontszám: 501" Margin="0 70 0 0"/>
        <Label Name="Player2ScoreLabel" Grid.Column="1" Content="player2 Pontszám: 501" Margin="0 110 0 0"/>
        <Label Name="CurrentPlayerLabel" Grid.Column="1" Content="Current Player: 1" Margin="0 150 0 0"/>
        <Button Name="ExitButton" Content="Kilépés" Grid.Column="1" Grid.Row="1" Width="120" Height="50" Click="ExitButton_Click"/>
        <Canvas Name="CursorCanvas" IsHitTestVisible="False">
            <Ellipse Name="CursorRing" Width="30" Height="30" Stroke="Cyan" StrokeThickness="2"/>
        </Canvas>
    </Grid>
</Window>
