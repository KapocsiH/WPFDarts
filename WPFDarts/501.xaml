<Window x:Class="WPFDarts._501"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDarts"
        mc:Ignorable="d"
        Title="_501" Height="450" Width="800">
    <Grid>
        <!-- Dartboard Image -->
        <Image Name="DartBoard" Source="Blade6.jpg" Width="400" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>

        <!-- Score Display -->
        <TextBlock Name="ScoreText" Text="Score: 0" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
