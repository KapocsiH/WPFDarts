<Window x:Class="WPFDarts._501"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDarts"
        mc:Ignorable="d"
        Title="_501" Height="450" Width="800">
    <Grid>
        <!-- Dartboard Image -->
        <Image Source="Blade6.jpg" Width="400" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Clickable Canvas for Point Zones -->
        <Canvas Width="400" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Outer Bullseye (25 points) -->
            <Ellipse Canvas.Left="190" Canvas.Top="190" Width="20" Height="20"
                     Fill="Transparent" Stroke="Red" StrokeThickness="2"
                     MouseDown="BullseyeOuter_Click"/>

            <!-- Inner Bullseye (50 points) -->
            <Ellipse Canvas.Left="195" Canvas.Top="195" Width="10" Height="10"
                     Fill="Transparent" Stroke="Red" StrokeThickness="2"
                     MouseDown="BullseyeInner_Click"/>

            <!-- Double Ring (Click for Double Points) -->
            <Ellipse Canvas.Left="50" Canvas.Top="50" Width="300" Height="300"
                     Fill="Transparent" Stroke="Blue" StrokeThickness="2"
                     MouseDown="DoubleRing_Click"/>

            <!-- Triple Ring (Click for Triple Points) -->
            <Ellipse Canvas.Left="100" Canvas.Top="100" Width="200" Height="200"
                     Fill="Transparent" Stroke="Green" StrokeThickness="2"
                     MouseDown="TripleRing_Click"/>
        </Canvas>

        <!-- Score Display -->
        <TextBlock Name="ScoreText" Text="Score: 0" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
