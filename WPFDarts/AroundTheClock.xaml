<Window x:Class="WPFDarts.AroundTheClock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDarts"
        mc:Ignorable="d"
        Title="AroundTheClock" Height="450" Width="800">
    <Canvas>
        <!-- Outer Bullseye -->
        <Ellipse Width="50" Height="50" Fill="Red" Canvas.Left="225" Canvas.Top="225"/>

        <!-- Inner Bullseye -->
        <Ellipse Width="20" Height="20" Fill="Green" Canvas.Left="240" Canvas.Top="240"/>

        <!-- Triple Ring -->
        <Ellipse Width="400" Height="400" Stroke="Black" StrokeThickness="2" Canvas.Left="50" Canvas.Top="50"/>
        <Ellipse Width="300" Height="300" Stroke="Black" StrokeThickness="2" Canvas.Left="100" Canvas.Top="100"/>

        <!-- Double Ring -->
        <Ellipse Width="450" Height="450" Stroke="Black" StrokeThickness="2" Canvas.Left="25" Canvas.Top="25"/>
        <Ellipse Width="350" Height="350" Stroke="Black" StrokeThickness="2" Canvas.Left="75" Canvas.Top="75"/>

        <!-- Section Dividers -->
        <Line X1="250" Y1="25" X2="250" Y2="475" Stroke="Black" StrokeThickness="2"/>
        <Line X1="25" Y1="250" X2="475" Y2="250" Stroke="Black" StrokeThickness="2"/>

    </Canvas>
</Window>
