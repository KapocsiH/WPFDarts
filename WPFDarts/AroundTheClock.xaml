<Window x:Class="WPFDarts.AroundTheClock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDarts"
        mc:Ignorable="d"
        Title="AroundTheClock" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="CurrentPlayerText" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock Text="Click on the dartboard to throw!" FontSize="14" TextAlignment="Center" Margin="10"/>

            <Canvas Name="DartboardCanvas" Width="400" Height="400" Background="LightGray" MouseLeftButtonDown="Dartboard_Click">
                <!-- Dartboard numbers (simplified representation) -->
                <TextBlock Text="1" Canvas.Left="190" Canvas.Top="10" FontSize="16"/>
                <TextBlock Text="20" Canvas.Left="350" Canvas.Top="50" FontSize="16"/>
                <TextBlock Text="5" Canvas.Left="50" Canvas.Top="50" FontSize="16"/>
                <!-- More numbers can be added similarly -->
            </Canvas>

            <TextBox Name="GameLog" Width="500" Height="200" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Grid>
</Window>
