<Window x:Class="WPFDarts.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="250" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Player 1 Name:" Margin="10"/>
            <TextBox Name="Player1NameTextBox" Width="200" Margin="10"/>
            <TextBlock Text="Player 2 Name:" Margin="10"/>
            <TextBox Name="Player2NameTextBox" Width="200" Margin="10"/>
            <Button Content="Submit" Width="100" Margin="10" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
